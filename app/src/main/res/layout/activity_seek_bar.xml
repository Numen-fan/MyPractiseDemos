<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.seekbar.SeekBarActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_seek_bar">

    <SeekBar
        android:id="@+id/seekbar_hitv_gallery_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minWidth="240dp"
        android:maxWidth="240dp"
        android:maxHeight="22dp"
        android:progress="0"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:splitTrack="false"
        android:thumbOffset="0dp"
        android:progressDrawable="@drawable/hitv_seekbar_gallery_switch_style"
        android:thumb="@drawable/hitv_progress_middle_icon_selecter"/>

    <Button
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_add_progress"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="add"/>

    <Button
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_reduce_progress"
        android:layout_width="200dp"
        android:text="reduce"
        android:layout_height="50dp" />
</LinearLayout>