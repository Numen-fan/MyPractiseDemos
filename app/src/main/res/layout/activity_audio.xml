<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.audio.AudioActivity">

    <Button
        android:id="@+id/btn_audio_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Play"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@color/blue_btn_bg_color"
        android:textColor="@color/button_text_color" />

    <Button
        android:id="@+id/btn_audio_start_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start bluetooth"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/blue_btn_bg_color"
        android:textColor="@color/button_text_color"
        app:layout_constraintTop_toBottomOf="@id/btn_audio_play"
        app:layout_constraintStart_toStartOf="@id/btn_audio_play"
        app:layout_constraintEnd_toEndOf="@id/btn_audio_play" />

    <Button
        android:id="@+id/btn_audio_stop_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stop bluetooth"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/blue_btn_bg_color"
        android:textColor="@color/button_text_color"
        app:layout_constraintTop_toBottomOf="@id/btn_audio_start_bluetooth" />
    <Button
        android:id="@+id/btn_audio_set_bluetoothOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="switch bluetooth on"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/blue_btn_bg_color"
        android:textColor="@color/button_text_color"
        app:layout_constraintTop_toBottomOf="@id/btn_audio_stop_bluetooth" />

</androidx.constraintlayout.widget.ConstraintLayout>